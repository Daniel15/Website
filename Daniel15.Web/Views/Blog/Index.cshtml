@model Daniel15.Web.ViewModels.Blog.ListingViewModel
@inject Daniel15.Infrastructure.ISiteConfiguration Config

@{
	//Model.PageUrlGenerator = page => Url.Action(MVC.Blog.Index(page));
	Model.PageUrlGenerator = page => Url.BlogIndex(page);
	Model.Heading = Config.BlogName;
	
	// Only show page number if we're not on page 1
	Model.Title = Model.Page == 1
		? Config.BlogName
		: string.Format("Page {0} — {1}", Model.Page, Config.BlogName);
}

@Html.Partial("_Posts", Model)