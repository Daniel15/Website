@using Daniel15.Shared.Configuration
@model ViewModelBase
@inject ISiteConfiguration Config

@{
	// "Inherit" from the base layout
	Layout = "~/Views/Shared/_Layout.cshtml";
	Model.SidebarType = SidebarType.Right;
}

@RenderBody()

@section sidebar
{
	<cache expires-after="TimeSpan.FromDays(1)">
		@await Component.InvokeAsync("BlogSidebar")
	</cache>
}

@section extraHead
{
	<link rel="index" title="@Config.BlogName" href="@Url.Action("Index")" />
	@RenderSection("extraHead", required: false)
}

@section extraFoot
{
	@Html.Partial("_DisqusCount")
	@RenderSection("extraFoot", required: false)
}
