@using Daniel15.Web.ViewModels.Shared
@model Daniel15.Web.ViewModels.Blog.ListingViewModel

@foreach (var post in Model.Posts)
{
	<partial name="_PostBrief" model="post" />
}

<partial 
	name="_Pagination"
	model="new PaginationModel
	{
		CurrentPage = Model.Page,
		TotalPages = Model.TotalPages,
		UrlGenerator = Model.PageUrlGenerator
	}"
/>
